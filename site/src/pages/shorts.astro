			currentScene = index;
			updateNavButtons();
			updateIndicators();

			setTimeout(() => {
				isAnimating = false;
			}, 300);
		}

		// Navigation button clicks
		upBtn?.addEventListener('click', () => {
			if (currentScene < scenes.length - 1 && !isAnimating) {
