		scenesContainer?.addEventListener('touchmove', (e) => {
			touchEndY = e.touches[0].clientY;
		});

		scenesContainer?.addEventListener('touchend', () => {
			handleSwipe();
		});

		// Mouse events for desktop testing
		scenesContainer?.addEventListener('mousedown', (e) => {
			isDragging = true;
			touchStartY = e.clientY;
		});

		scenesContainer?.addEventListener('mousemove', (e) => {
			if (isDragging) {
				touchEndY = e.clientY;
			}
		});

		scenesContainer?.addEventListener('mouseup', () => {
			if (isDragging) {
