		function scheduleNextDialogue() {
			if (autoPlayTimer) {
				clearTimeout(autoPlayTimer);
			}
			autoPlayTimer = setTimeout(() => {
				advanceDialogue(true);
			}, AUTO_PLAY_DELAY);
