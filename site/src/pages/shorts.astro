					() => scene.querySelector('.scene1-question1')?.classList.add('show'),
					() => scene.querySelector('.scene1-question3')?.classList.add('show'),
				];

				if (dialogueStep < elements.length) {
					elements[dialogueStep]();
					dialogueStep++;
					// Schedule next dialogue if auto-playing
					if (isAutoPlay) {
						scheduleNextDialogue();
					}
				} else if (currentScene < scenes.length - 1 && !isAutoPlay) {
					// All dialogues shown, go to next scene (only on manual click)
					showScene(currentScene + 1);
				}
			} else if (currentScene === 1) {
				// Scene 2
				const elements = [
					() => scene.querySelector('.dialogue1-s2')?.classList.add('show'),
					() => scene.querySelector('.dialogue2-s2')?.classList.add('show'),
					() => scene.querySelector('.dialogue3-s2')?.classList.add('show'),
					() => scene.querySelector('.dialogue4-s2')?.classList.add('show'),
					() => scene.querySelector('.scene2-icons')?.classList.add('show'),
				];

				if (dialogueStep < elements.length) {
					elements[dialogueStep]();
					dialogueStep++;
					// Schedule next dialogue if auto-playing
					if (isAutoPlay) {
						scheduleNextDialogue();
					}
				} else if (currentScene < scenes.length - 1 && !isAutoPlay) {
					// All dialogues shown, go to next scene (only on manual click)
					showScene(currentScene + 1);
				}
			} else if (currentScene === 2) {
				// Scene 3 - go to next scene directly (only on manual click)
				if (currentScene < scenes.length - 1 && !isAutoPlay) {
					showScene(currentScene + 1);
				}
			}
		}

		// Click/tap to advance dialogue
		scenesContainer?.addEventListener('click', (e) => {
			// Don't trigger if clicking on buttons or links
			if (e.target.closest('button') || e.target.closest('a')) {
				return;
			}
			advanceDialogue();
		});

		// Initialize first scene
		showScene(0);

