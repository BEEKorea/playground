		});

		function handleSwipe() {
			const diff = touchStartY - touchEndY;
			// Swipe up = next scene
			if (diff > 50 && currentScene < scenes.length - 1 && !isAnimating) {
				showScene(currentScene + 1);
			}
			// Swipe down = previous scene
			else if (diff < -50 && currentScene > 0 && !isAnimating) {
				showScene(currentScene - 1);
			}
			touchStartY = 0;
			touchEndY = 0;
		}

